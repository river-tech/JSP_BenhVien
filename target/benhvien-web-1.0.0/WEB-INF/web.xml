<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>BenhVien Vaccine Manager</display-name>

    <servlet>
        <servlet-name>VaccineSearchServlet</servlet-name>
        <servlet-class>controller.VaccineSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VaccineSearchServlet</servlet-name>
        <url-pattern>/vaccines/search</url-pattern>
        <url-pattern>/vaccines</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VaccineCreateServlet</servlet-name>
        <servlet-class>controller.VaccineCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VaccineCreateServlet</servlet-name>
        <url-pattern>/vaccines/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VaccineEditServlet</servlet-name>
        <servlet-class>controller.VaccineEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VaccineEditServlet</servlet-name>
        <url-pattern>/vaccines/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VaccineDeleteServlet</servlet-name>
        <servlet-class>controller.VaccineDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VaccineDeleteServlet</servlet-name>
        <url-pattern>/vaccines/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LichSuTiemServlet</servlet-name>
        <servlet-class>controller.LichSuTiemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LichSuTiemServlet</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ThongKeServlet</servlet-name>
        <servlet-class>controller.ThongKeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ThongKeServlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerHistoryServlet</servlet-name>
        <servlet-class>controller.CustomerHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerHistoryServlet</servlet-name>
        <url-pattern>/customer/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <servlet-class>controller.RegisterCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <url-pattern>/register-customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterVaccinationServlet</servlet-name>
        <servlet-class>controller.RegisterVaccinationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterVaccinationServlet</servlet-name>
        <url-pattern>/admin/register-vaccination</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetVaccinesByDiseaseServlet</servlet-name>
        <servlet-class>controller.GetVaccinesByDiseaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetVaccinesByDiseaseServlet</servlet-name>
        <url-pattern>/admin/get-vaccines-by-disease</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
